<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Exam Application" Height="450" Width="800"
        materialDesign:ColorZoneAssist.Mode="PrimaryLight">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="ChineseButton" Content="语文" Width="200" Height="50" Margin="10" Click="StartChineseExam"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button x:Name="MathButton" Content="数学" Width="200" Height="50" Margin="10" Click="StartMathExam"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button x:Name="EnglishButton" Content="英语" Width="200" Height="50" Margin="10" Click="StartEnglishExam"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </Grid>
</Window>