<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ElectricalSafetyCheck" Height="800" Width="1000"
        materialDesign:ColorZoneAssist.Mode="PrimaryLight">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="FCPUButton" Content="安全PLC" Width="200" Height="50" Margin="10" Click="StartFCPU"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button x:Name="ProgRelayButton" Content="可编程安全继电器" Width="200" Height="50" Margin="10" Click="StartProgRelay"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button x:Name="RelayButton" Content="安全继电器" Width="200" Height="50" Margin="10" Click="StartRelay"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </Grid>
</Window>