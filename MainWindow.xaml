<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ElectricalSafetyCheck" Height="450" Width="800"
        materialDesign:ColorZoneAssist.Mode="PrimaryLight">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="FCPUButton" Content="安全PLC" Width="200" Height="50" Margin="10" Click="StartChineseExam"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button x:Name="ProgRealyButton" Content="可编程安全继电器" Width="200" Height="50" Margin="10" Click="StartMathExam"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button x:Name="RealyButton" Content="安全继电器" Width="200" Height="50" Margin="10" Click="StartEnglishExam"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </Grid>
</Window>