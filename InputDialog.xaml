<Window x:Class="YourNamespace.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="170" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Margin="10" Text="请输入科目名称:"/>
        <TextBox x:Name="InputTextBox" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" Width="75" Margin="10" Click="OKButton_Click"/>
            <Button Content="取消" Width="75" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>